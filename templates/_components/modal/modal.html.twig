{% set route = app.request.attributes.get('_route') %}

<div class="modal micromodal-slide" id="modal-{{target}}" aria-hidden="true">
    <div class="modal__overlay" tabindex="-1" data-micromodal-close>
      <div class="modal__container" role="dialog" aria-modal="true" aria-labelledby="modal-{{target}}-title">
        <button class="modal__close" aria-label="Close modal"><i class="fa fa-times-circle" data-micromodal-close></i></button>
        <header class="modal__header">
         {% if route == 'home' or route == 'characters' %}
          <p class="avatar"><img src="{{data.image}}" alt="{{ data.name }}" title="{{ data.name }}"> </p>
         {% endif %}
          <h2 class="modal__title" id="modal-{{target}}-title">
            {{data.name}}
          </h2>
          
        </header>
        <main class="modal__content" id="modal-{{target}}-content">
            {% include "_components/modal/"~ modal ~".html.twig" %}

        </main>
      </div>
    </div>
  </div>