<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" type="image/png" href="{{asset('images/portal.png')}}" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body {% block class_body %}{% endblock %}>
        <header>
            <nav>
                <a href="{{path('home')}}"><img src="{{asset('images/rick-morty.png')}}" alt=""></a>
                <ul>
                    <li><a href="{{path('characters')}}" {% if app.request.attributes.get('_route') == 'characters' %} class="active"{% endif %}>Characters</a></li>
                    <li><a href="{{path('locations')}}" {% if app.request.attributes.get('_route') == 'locations' %} class="active"{% endif %}>Locations</a></li>
                    <li><a href="{{path('episodes')}}" {% if app.request.attributes.get('_route') == 'episodes' %} class="active"{% endif %}>Episodes</a></li>
                </ul>
            </nav>
            {% block background %}{% endblock %}
        </header>
        {% block body %}{% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
